<?xml version="1.0" encoding="utf-8"?>
<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
    <!-- Background with subtle gradient -->
    <defs>
        <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#f0f0f0;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#e0e0e0;stop-opacity:1" />
        </linearGradient>
    </defs>

    <!-- Message bubble outlines -->
    <rect x="20" y="40" width="100" height="60" rx="15" ry="15" fill="url(#bgGradient)" stroke="#bdbdbd" stroke-width="2" />
    <rect x="80" y="110" width="100" height="60" rx="15" ry="15" fill="url(#bgGradient)" stroke="#bdbdbd" stroke-width="2" />

    <!-- Message lines -->
    <line x1="40" y1="60" x2="100" y2="60" stroke="#bdbdbd" stroke-width="4" stroke-linecap="round" />
    <line x1="40" y1="80" x2="80" y2="80" stroke="#bdbdbd" stroke-width="4" stroke-linecap="round" />

    <line x1="100" y1="130" x2="160" y2="130" stroke="#bdbdbd" stroke-width="4" stroke-linecap="round" />
    <line x1="100" y1="150" x2="140" y2="150" stroke="#bdbdbd" stroke-width="4" stroke-linecap="round" />

    <!-- Question mark to signify no messages -->
    <text x="100" y="100" font-family="Arial" font-size="40" font-weight="bold" fill="#9e9e9e" text-anchor="middle">?</text>
</svg>