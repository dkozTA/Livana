<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thay thế tiêu đề Menu bằng phần bạn cung cấp -->
        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="0dp" />
        </LinearLayout>

        <!-- Dưới đây là phần 2 card: Thu nhập & Thông tin chuyên sâu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:weightSum="1">

            <!-- Card 1: Thu nhập -->
            <androidx.cardview.widget.CardView
                android:id="@+id/income_card"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Thu nhập"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="₫35.637.790 trong tháng này"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="16dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <View android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="40dp" android:background="#D81B60" />
                        <View android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="50dp" android:background="#D81B60" />
                        <View android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="60dp" android:background="#D81B60" />
                        <View android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="30dp" android:background="#D81B60" />
                        <View android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="50dp" android:background="#DDDDDD" />
                        <View android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="40dp" android:background="#DDDDDD" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:weightSum="1">

            <!-- Card 2: Thông tin chuyên sâu -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Thông tin chuyên sâu"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="★ 4.96 · 188 đánh giá"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_apartment" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_home" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_homestay" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="#EEEEEE"
                            android:text="+5"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
