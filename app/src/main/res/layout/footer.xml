<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Other UI components -->

    <LinearLayout
        android:id="@+id/footer"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="2dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_explore"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/ic_app_icon"
            android:padding="4dp"
            android:text="Explore"
            android:textAllCaps="false"
            android:textColor="@color/footer_button_text_color"
            android:textSize="9sp" />

        <Button
            android:id="@+id/button_wishlists"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/ic_app_icon"
            android:text="Wishlist"
            android:textAllCaps="false"
            android:padding="4dp"
            android:textColor="@color/footer_button_text_color"
            android:textSize="9sp" />

        <Button
            android:id="@+id/button_trips"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/ic_app_icon"
            android:text="Trips"
            android:textAllCaps="false"
            android:padding="4dp"
            android:textColor="@color/footer_button_text_color"
            android:textSize="9sp" />

        <Button
            android:id="@+id/button_messages"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/ic_app_icon"
            android:text="Messages"
            android:textAllCaps="false"
            android:padding="4dp"
            android:textColor="@color/footer_button_text_color"
            android:textSize="9sp" />

        <Button
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/ic_app_icon"
            android:text="Profile"
            android:textAllCaps="false"
            android:padding="4dp"
            android:textColor="@color/footer_button_text_color"
            android:textSize="9sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>