        <item name="colorControlActivated">#FFD700</item> <!-- Màu vàng -->
    </style>
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorOnSurface">#333333</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColorPrimary">#333333</item>
    </style>
    <style name="RoundedTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
